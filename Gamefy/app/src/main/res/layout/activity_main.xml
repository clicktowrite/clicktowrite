<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/theme_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="8dp"
        android:text="Night Mode" />

    <TextView
        android:id="@+id/result_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="end|bottom"
        android:padding="16dp"
        android:textSize="48sp"
        android:maxLength="15"
        android:ellipsize="start"
        android:singleLine="true"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">

        <Button android:id="@+id/button_clear" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="C" android:onClick="onClear"/>
        <Button android:id="@+id/button_divide" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="/" android:onClick="onOperator"/>
        <Button android:id="@+id/button_multiply" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="*" android:onClick="onOperator"/>
        <Button android:id="@+id/button_backspace" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="âŒ«" android:onClick="onBackspace"/>

        <Button android:id="@+id/button_7" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="7" android:onClick="onDigit"/>
        <Button android:id="@+id/button_8" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="8" android:onClick="onDigit"/>
        <Button android:id="@+id/button_9" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="9" android:onClick="onDigit"/>
        <Button android:id="@+id/button_subtract" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="-" android:onClick="onOperator"/>

        <Button android:id="@+id/button_4" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="4" android:onClick="onDigit"/>
        <Button android:id="@+id/button_5" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="5" android:onClick="onDigit"/>
        <Button android:id="@+id/button_6" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="6" android:onClick="onDigit"/>
        <Button android:id="@+id/button_add" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="+" android:onClick="onOperator"/>

        <Button android:id="@+id/button_1" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="1" android:onClick="onDigit"/>
        <Button android:id="@+id/button_2" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="2" android:onClick="onDigit"/>
        <Button android:id="@+id/button_3" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="3" android:onClick="onDigit"/>
        <Button android:id="@+id/button_equals" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="=" android:onClick="onEqual"/>

        <Button android:id="@+id/button_0" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_columnSpan="2" android:text="0" android:onClick="onDigit"/>
        <Button android:id="@+id/button_dot" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="." android:onClick="onDecimalPoint"/>
    </GridLayout>

</LinearLayout>