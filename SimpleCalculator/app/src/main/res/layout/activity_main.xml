<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/theme_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Night Mode" />

    <TextView
        android:id="@+id/result_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="end|bottom"
        android:padding="16dp"
        android:textSize="48sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">

        <Button android:id="@+id/button_clear" android:text="C" android:onClick="onClear"/>
        <Button android:id="@+id/button_divide" android:text="/" android:onClick="onOperator"/>
        <Button android:id="@+id/button_multiply" android:text="*" android:onClick="onOperator"/>
        <Button android:id="@+id/button_backspace" android:text="âŒ«" android:onClick="onBackspace"/>

        <Button android:id="@+id/button_7" android:text="7" android:onClick="onDigit"/>
        <Button android:id="@+id/button_8" android:text="8" android:onClick="onDigit"/>
        <Button android:id="@+id/button_9" android:text="9" android:onClick="onDigit"/>
        <Button android:id="@+id/button_subtract" android:text="-" android:onClick="onOperator"/>

        <Button android:id="@+id/button_4" android:text="4" android:onClick="onDigit"/>
        <Button android:id="@+id/button_5" android:text="5" android:onClick="onDigit"/>
        <Button android:id="@+id/button_6" android:text="6" android:onClick="onDigit"/>
        <Button android:id="@+id/button_add" android:text="+" android:onClick="onOperator"/>

        <Button android:id="@+id/button_1" android:text="1" android:onClick="onDigit"/>
        <Button android:id="@+id/button_2" android:text="2" android:onClick="onDigit"/>
        <Button android:id="@+id/button_3" android:text="3" android:onClick="onDigit"/>
        <Button android:id="@+id/button_equals" android:text="=" android:onClick="onEqual"/>

        <Button android:id="@+id/button_0" android:text="0" android:onClick="onDigit"/>
        <Button android:id="@+id/button_dot" android:text="." android:onClick="onDecimalPoint"/>
    </GridLayout>

</LinearLayout>